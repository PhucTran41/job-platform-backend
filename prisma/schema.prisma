// This is your Prisma schema file
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums
enum Role {
  CANDIDATE
  RECRUITER
  ADMIN
}

// User Model
model User {
  id          Int       @id @default(autoincrement())
  email       String    @unique
  username    String    @unique
  password    String
  role        Role      @default(CANDIDATE)
  
  // Profile fields (shared by all roles)
  fullName    String?
  phone       String?
  
  // Candidate-specific
  resume      String?   // URL to resume file
  skills      String?   // Store as comma-separated: "JavaScript,React,Node.js"
  experience  String?   // Years or description
  education   String?
  
  // Recruiter-specific
  companyName String?
  companyInfo String?
  
  // Relations
  jobPostings  JobPosting[]  // If RECRUITER
  applications Application[] // If CANDIDATE
  
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([email])
  @@index([username])
  @@map("users")
}

// Job Posting Model
model JobPosting {
  id           Int      @id @default(autoincrement())
  title        String
  description  String
  requirements String
  salary       String?
  location     String
  industry     String   // "Technology", "Finance", etc.
  jobType      String   // "Full-time", "Part-time", "Contract"
  
  recruiterId  Int
  recruiter    User     @relation(fields: [recruiterId], references: [id], onDelete: Cascade)
  
  applications Application[]
  
  isActive     Boolean  @default(true)
  views        Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([recruiterId])
  @@index([industry])
  @@index([location])
  @@map("job_postings")
}

// Application Status Enum
enum ApplicationStatus {
  PENDING
  REVIEWED
  INTERVIEW
  ACCEPTED
  REJECTED
}

// Application Model
model Application {
  id           Int      @id @default(autoincrement())
  
  candidateId  Int
  candidate    User     @relation(fields: [candidateId], references: [id], onDelete: Cascade)
  
  jobPostingId Int
  jobPosting   JobPosting @relation(fields: [jobPostingId], references: [id], onDelete: Cascade)
  
  status       ApplicationStatus @default(PENDING)
  coverLetter  String?
  
  appliedAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  @@unique([candidateId, jobPostingId])
  @@index([candidateId])
  @@index([jobPostingId])
  @@map("applications")
}